{
  "include": [
    "api-server",
    "auth-service",
    "core",
    "user-service"
  ],
  "exclude": ["**/docs", "**/scripts", "**/tests"],

  "executionEnvironments": [
    { "root": "api-server", "extraPaths": ["core"] },
    { "root": "auth-service", "extraPaths": ["core"] },
    { "root": "user-service", "extraPaths": ["core"] }
  ],

  "pythonVersion": "3.13",
  "venvPath": ".",
  "venv": ".venv",

  "typeCheckingMode": "strict",
  "reportMissingImports": "error",
  "reportUnusedImport": "error",
  "reportUnusedVariable": "error"
}
